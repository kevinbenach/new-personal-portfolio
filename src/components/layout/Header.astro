---
import ActiveSectionHighlight from '@/components/islands/ActiveSectionHighlight.tsx';
import LanguageSwitcher from '@/components/islands/LanguageSwitcher.tsx';
import MobileNavigationMenu from '@/components/islands/MobileNavigationMenu.tsx';
import NavigationText from '@/components/islands/NavigationText.tsx';
import ThemeToggle from '@/components/islands/ThemeToggle.tsx';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<header
  class={`fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-md border-b border-gray-200/50 dark:bg-gray-900/80 dark:border-gray-700/50 ${className}`}
>
  <nav
    class="container mx-auto px-4 sm:px-6 lg:px-8"
    aria-label="Main navigation"
  >
    <div class="flex items-center justify-between h-16">
      <!-- Logo/Brand -->
      <div class="flex-shrink-0">
        <a
          href="#home"
          class="text-2xl font-bold text-gray-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200"
          aria-label="Go to top of page"
        >
          Portfolio
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-center space-x-8">
          <!-- Navigation Text Island - automatically updates with language changes -->
          <NavigationText client:only="preact" />

          <!-- Language & Theme Controls -->
          <div class="ml-4 flex items-center space-x-2">
            <LanguageSwitcher client:only="preact" />
            <ThemeToggle client:load />
          </div>
        </div>
      </div>

      <!-- Mobile menu (only loads JavaScript on mobile devices) -->
      <div class="md:hidden">
        <div class="flex items-center space-x-2">
          <LanguageSwitcher client:only="preact" />
          <ThemeToggle client:load />
          <MobileNavigationMenu client:only="preact" />
        </div>
      </div>
    </div>
  </nav>

  <!-- Active section highlighting (loads when main thread is idle) -->
  <ActiveSectionHighlight
    client:only="preact"
    sections={['home', 'projects', 'skills', 'experience', 'contact']}
  />
</header>
