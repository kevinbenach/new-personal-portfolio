---
interface Props {
  variant?: 'default' | 'elevated' | 'outlined' | 'glass';
  hover?: boolean;
  class?: string;
}

const {
  variant = 'default',
  hover = false,
  class: className = '',
  ...rest
} = Astro.props;

const baseClasses = 'rounded-lg transition-all duration-300';

const variants = {
  default: 'bg-white dark:bg-gray-800 shadow-soft',
  elevated: 'bg-white dark:bg-gray-800 shadow-medium',
  outlined: 'bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700',
  glass: 'glass-effect'
};

const hoverClasses = hover ? 'hover:shadow-hard hover:-translate-y-1' : '';

const classes = `${baseClasses} ${variants[variant]} ${hoverClasses} ${className}`;
---

<div class={classes} {...rest}>
  <slot />
</div>