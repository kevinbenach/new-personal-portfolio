---
import ContactForm from '@/components/islands/ContactForm.tsx';
import ContactText from '@/components/islands/ContactText.tsx';
import ContactInfo from '@/components/islands/ContactInfo.tsx';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<section id="contact" class={`py-20 bg-white dark:bg-gray-900 ${className}`}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <!-- Section Header with translations -->
      <div class="text-center mb-16">
        <ContactText client:only="preact" />
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Contact Form Island - Only loads JavaScript when visible! -->
        <div class="h-full">
          <ContactForm client:visible />
        </div>

        <!-- Contact Information with translations -->
        <div class="flex flex-col h-full">
          <ContactInfo client:only="preact" />
        </div>
      </div>
    </div>
  </div>
</section>
