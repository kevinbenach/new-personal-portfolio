---
import SkillsGrid from '../islands/SkillsGrid';
import SkillsHighlights from '../islands/SkillsHighlights';
import SkillsText from '../islands/SkillsText';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<section id="skills" class="py-20 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <SkillsText client:only="preact" />

      <!-- Hydrated, fully dynamic skills grid -->
      <SkillsGrid client:only="preact" />

      <div class="text-center">
        <SkillsHighlights client:only="preact" />
      </div>
    </div>
  </div>
</section>
